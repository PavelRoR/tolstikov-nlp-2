@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
@media screen and (max-width 1199px)
	.main-img img
		bottom: -32px
	.packet-head-title
		font-size: 21px
	.packet-body-text
		font-size: 15px
@media screen and (max-width 991px)
	#main
		text-align: center
	.main-title
		margin-bottom: 0
	.main-img
	.general-img-padded-for-if
	.general-img-padded-lets
	.general-img-padded-author
	.general-img-paddet-technics
		padding 0
		position: static
		img
			position static
			display block
			margin 0 auto
			width 100%
			max-width 800px
	.main-img img
		margin-top: 30px
	.general-img-paddet-technics img
		height auto
	#for
	#plan
	#lets
	#technics
	#prices
	#author
	#revs
		padding 40px 0
	.general-img-padded-for-if img
	.general-img-padded-lets img
		margin-top: 40px
	.general-title
		font-size: 30px
		margin-bottom: 30px
	#last
		padding 40px 0 60px
	.last-text
		font-size: 22px
		margin 20px 0 30px
@media screen and (max-width 767px)
	.mfp-arrow
		top: auto
		bottom: 15px
@media screen and (max-width 595px)
	header
		padding 10px 0
		margin-bottom: 20px
	.header-logo
		width 70px
	.contacts
		width 210px
	.contact
		font-size: 12px
		line-height: 30px
	.main-title
		font-size: 28px
		small
			font-size: 16px
	.main-info
		font-size: 18px
	.general-text
		margin-bottom: 10px
	.general-title
		font-size: 24px
	.general-subtitle
		font-size: 16px
		margin-bottom: 15px
	.module-title
		font-size: 26px
		margin-bottom: 25px
	.module-item-title
		font-size: 22px
	#plan
		padding 40px 0 0
	.button-for
	.button-lets
		margin-top: 30px
	.general-ol-list li
		display block
		overflow hidden
		display block
		&:before
			display inline-block
			line-height: 48px
			float left
		span
			display inline-block
			float left
			padding-left: 20px
			width calc(100% - 50px)
	.author-title
		font-size: 24px
	.general-ul-list-author li
		padding 10px 0
	#video-revs
		margin-bottom: 40px
	.cert-img
		height 100px
		margin-bottom: 10px
	.author-certs
		padding-top: 30px
	.prepayment
		margin-top: 0
	.prepayment-title
		font-size: 28px
	.prepayment-text
		font-size: 18px
	.timer-title
		font-size: 26px
		margin-top: 30px
		line-height: 1.1
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 20px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px
	.last-text
		font-size: 20px
	footer
		padding 15px 0
		font-size: 12px
		h5
			font-size: 18px
	.soc-button a
			margin 10px 5px
@media screen and (max-width 385px)
	header
		margin-bottom: 10px
	.header-logo
		float: none
		display block
		margin 0 auto 5px
	.contacts
		float: none
		text-align center
		margin 0 auto
	.main-title
		font-size: 20px
		small
			font-size: 14px
	.main-info:last-of-type
		margin-bottom: 30px
	.general-title
		font-size: 22px
	.general-ol-list li
		&:before
			display block
			float none
			margin-bottom: 10px
		span
			display block
			padding-left: 0
			width 100%
	.general-img-for-2
		right: -250px
	.for-wish
		padding-bottom: 0
	.module-title
		font-size: 22px
		margin-bottom: 20px
	.module-item-title
		font-size: 20px
	.general-ul-list li:before
		top 26px
	.packet-head-title
		font-size: 17px
	.packet-body
		padding 10px
	.packet-body-text
	.packet-body-bonus-list li
		font-size: 14px
	.packet-body-bonus-title
		font-size: 20px
	.cost
		font-size: 22px
		span
			font-size: 28px
	.timer-title
		font-size: 22px
	.author-title
		font-size: 22px
		margin-bottom: 10px
	#revs
		padding 0
	.text-rev-img
		height 70px
	.last-text
		font-size: 18px
	#last
		padding 30px 0 40px
	.mfp-arrow
		bottom: 100px