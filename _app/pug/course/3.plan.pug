mixin mod(clm,h5,...items)
	.module-item(class=cl)
		h5.module-item-title=h5
		ul.general-list.general-ul-list
			each item in items
				li
					span=item
section#plan
	.container
		img.general-img.general-img-plan-1(src=path+"img/icons/4-corners.png", alt="Пирамидки")
		img.general-img.general-img-plan-2(src=path+"img/icons/daggers.png", alt="Крестики")
		img.general-img.general-img-plan-3(src=path+"img/icons/dots.png", alt="Точки")
		+gt('general-title-center','Программа курса')
		.module.module-1
			img(src=path+"img/icons/o.png", alt="Роспись").general-img.general-img-module-1-1
			h4.module-title НЛП - Часть 1 - “Душа Компании”
			.module-item-container
				+mod('','Занятие 1 “Введение в НЛП”','Фундаментальные идеи НЛП','Способы расширения мировоззрения','Набор позитивных установок и идей')
				+mod('','Занятие 2 “Экстрасенсорика”','Как моментально определять психотипы людей','Как видеть людей “насквозь” и читать их мысли','Способы лёгкого распознавания ложь и манипуляции')
				+mod('','Занятие 3 “Магия обольщения”','Как нравиться людям и вызывать интерес к себе','Мастерство общения и искусство очарования','Искусство понимать людей и доносить до них свои мысли')
				+mod('','Занятие 4 “Мастерство влияния”','Как вызывать доверие и уважение к себе','Искусство убеждения и технологии влияния','Противодействие любым манипуляциям')
			h4.module-title НЛП - Часть 2 - “Гипнотизёр”
			.module-item-container
				+mod('','Занятие 5 “Гениальность и совершенство”','Как входить в состояние мастерства и творчества','Секреты успеха от гениев и миллионеров','Инструменты для ускоренного саморазвития')
				+mod('','Занятие 6 “Исполнение желаний”','Как отличать истинные мечты от навязанных','Эффективные методы достижения целей','Психотехнологии исполнения желаний')
				+mod('','Занятие 7 “Чудо исцеления”','Как избавляться от страхов и комплексов','Секреты исцеления от психосоматических болезней','Методы противодействия приобретённой аллергии')
